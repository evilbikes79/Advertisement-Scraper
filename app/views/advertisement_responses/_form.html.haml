= form_for @advertisement_response do |f|
  -if @advertisement_response.errors.any?
    #error_explanation
      %h2= "#{pluralize(@advertisement_response.errors.count, "error")} prohibited this advertisement_response from being saved:"
      %ul
        - @advertisement_response.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :advertisement_id
    = f.text_field :advertisement_id
  .field
    = f.label :response_id
    = f.number_field :response_id
  .actions
    = f.submit 'Save'
